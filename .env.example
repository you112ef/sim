# ========================================
# SimStudio Environment Configuration
# ========================================

# Core Application Configuration
NODE_ENV=production
PORT=3000
NEXT_PUBLIC_APP_URL=https://simstudio.onrender.com

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/simstudio
DATABASE_SSL=require

# Authentication & Security (REQUIRED)
BETTER_AUTH_URL=https://simstudio.onrender.com
BETTER_AUTH_SECRET=your_auth_secret_here_min_32_chars
ENCRYPTION_KEY=your_encryption_key_here_min_32_chars
INTERNAL_API_SECRET=your_internal_api_secret_here_min_32_chars

# Security Settings
ALLOWED_ORIGINS=https://simstudio.onrender.com,https://www.simstudio.onrender.com
DISABLE_REGISTRATION=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_FREE_SYNC=10
RATE_LIMIT_FREE_ASYNC=50
FREE_TIER_COST_LIMIT=100

# Feature Flags
BILLING_ENABLED=false
EMAIL_VERIFICATION_ENABLED=false
POSTHOG_ENABLED=false
NEXT_PUBLIC_BILLING_ENABLED=false
NEXT_PUBLIC_POSTHOG_ENABLED=false
NEXT_PUBLIC_EMAIL_PASSWORD_SIGNUP_ENABLED=true

# Logging
LOG_LEVEL=INFO

# Optional: AI/LLM Provider API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY_1=your_anthropic_api_key_here
MISTRAL_API_KEY=your_mistral_api_key_here

# Optional: External Services
REDIS_URL=redis://localhost:6379
STRIPE_SECRET_KEY=your_stripe_secret_key_here
RESEND_API_KEY=your_resend_api_key_here

# Optional: Storage (AWS S3 or Azure Blob)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_NAME=your_s3_bucket_name

# Optional: Analytics
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key_here

# Build Configuration
DOCKER_BUILD=true
NEXT_TELEMETRY_DISABLED=1
VERCEL_TELEMETRY_DISABLED=1